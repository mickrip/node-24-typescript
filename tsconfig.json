{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true
    },
   "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}